<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativePopUp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="0,1,2,3">


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actual:"
                android:textAlignment="center"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/calcCurr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="textStart"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alm. Op:"
                android:textAlignment="center"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/calcOp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="textStart"
                android:textSize="16dp" />

        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/calc_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:singleLine="true"
                android:text="0"
                android:textAlignment="textEnd"
                android:textSize="45dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/calc_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="30dp" />

            <Button
                android:id="@+id/calc_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="30dp" />

            <Button
                android:id="@+id/calc_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="30dp" />

            <Button
                android:id="@+id/calc_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#ff7400"
                android:text="+"
                android:textSize="30dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/calc_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="30dp" />

            <Button
                android:id="@+id/calc_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="30dp" />

            <Button
                android:id="@+id/calc_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="30dp" />

            <Button
                android:id="@+id/calc_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#ff7400"
                android:text="-"
                android:textSize="30dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/calc_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="30dp" />

            <Button
                android:id="@+id/calc_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="30dp" />

            <Button
                android:id="@+id/calc_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="30dp" />

            <Button
                android:id="@+id/calc_multi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#ff7400"
                android:text="x"
                android:textSize="30dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/calc_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#e9e9ea"
                android:text="C"
                android:textColor="#000000"
                android:textSize="30dp" />

            <Button
                android:id="@+id/calc_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30dp" />

            <Button
                android:id="@+id/calc_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#e9e9ea"
                android:text="AC"
                android:textColor="#000000"
                android:textSize="30dp" />

            <Button
                android:id="@+id/calc_divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#ff7400"
                android:text="/"
                android:textSize="30dp" />

        </TableRow>

<!--        <TableRow-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center">-->

<!--            <Button-->
<!--                android:id="@+id/openBracket"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_span="2"-->
<!--                android:backgroundTint="#ff7400"-->
<!--                android:text="("-->
<!--                android:textSize="30dp" />-->


<!--            <Button-->
<!--                android:id="@+id/closeBracket"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:backgroundTint="#ff7400"-->
<!--                android:layout_span="2"-->
<!--                android:text=")"-->
<!--                android:textSize="30dp" />-->


<!--        </TableRow>-->

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <Button
                android:id="@+id/calc_equals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:backgroundTint="#ff7400"
                android:text="="
                android:textSize="30dp" />

            <Button
                android:id="@+id/calc_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#ff7400"
                android:text="."
                android:textSize="30dp" />


        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <at.markushi.ui.CircleButton
                android:id="@+id/calcExit"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_close_calc"
                app:cb_color="#853037"
                app:cb_pressedRingWidth="8dip" />


            <TextView />

            <TextView />

            <at.markushi.ui.CircleButton
                android:id="@+id/calcCorrect"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_check_white_36dp"
                app:cb_color="#28a999"
                app:cb_pressedRingWidth="8dip" />


        </TableRow>


    </TableLayout>

</RelativeLayout>