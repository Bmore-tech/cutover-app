<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/beginCustomConfirmHeader"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:backgroundTint="#2a4863"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal|center">

            <TextView
                android:id="@+id/headerTextViewCustomConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ADVERTENCIA"
                android:textColor="#b2b2b2"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/custom_confirm_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_warning_white_48" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/textViewCustomConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_below="@+id/beginCustomConfirmHeader"
        android:text="SOME TEXT"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold">

    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/beginCustomConfirmFooter"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/textViewCustomConfirm"
        android:layout_marginBottom="2dp"
        android:backgroundTint="#2a4863"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal|center">

            <ImageButton
                android:id="@+id/custom_confirm_cancel"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/custom_confirm_confirm"
                android:background="@drawable/round_cancel_white_48" />

            <ImageButton
                android:id="@+id/custom_confirm_confirm"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:background="@drawable/round_check_circle_white_48" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>